{
  "name": "endoassist-server",
  "version": "1.0.0",
  "scripts": {
	"start": "node -r ts-node/register ./src/server.ts",
    "start:dev": "cross-env NODE_ENV=development nodemon --delay 500ms",
    "start:prod": "cross-env NODE_ENV=production nodemon --delay 500ms",
    "build": "cross-env NODE_ENV=production && tsc && pkg .",
    "eslint": "eslint src/**"
  },
  "bin": "dist/server.js",
  "pkg": {
	  "assets": ["node_modules/**/*", "dist/**/*", "data/**/*"],
	  "targets": ["node14-win-x64", "node12-win-x64"]
  },
  "private": true,
  "dependencies": {
    "body-parser": "^1.19.0",
    "core-js": "^3.18.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.10.4",
    "multer": "^1.4.3",
    "tslib": "^2.3.1",
    "xlsx": "^0.17.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.10.6",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "nodemon": "^2.0.14",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
